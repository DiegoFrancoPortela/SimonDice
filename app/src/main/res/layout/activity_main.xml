    <ImageButton
        android:id="@+id/botonJugar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="152dp"
        android:layout_marginBottom="144dp"
        android:background="@drawable/boton_jugar"
        android:elevation="10dp"
        android:rotation="0"
        android:scaleType="fitCenter"
        android:src="@drawable/boton_play"
        app:layout_constraintBottom_toBottomOf="@+id/botonAzul"
        app:layout_constraintStart_toStartOf="@+id/botonVerde" />

    <ImageButton
        android:id="@+id/botonVerde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="192dp"
        android:contextClickable="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/boton_verde"
        android:backgroundTint="@color/transparente" />

    <ImageButton
        android:id="@+id/botonAmarillo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="3dp"
        app:layout_constraintEnd_toStartOf="@+id/botonAzul"
        app:layout_constraintStart_toStartOf="@+id/botonVerde"
        app:layout_constraintTop_toBottomOf="@+id/botonVerde"
        app:srcCompat="@drawable/boton_amarillo_seleccion"
        android:backgroundTint="@color/transparente" />

    <ImageButton
        android:id="@+id/botonRojo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="204dp"
        app:layout_constraintBottom_toTopOf="@+id/botonAzul"
        app:layout_constraintStart_toStartOf="@+id/botonVerde"
        app:srcCompat="@drawable/boton_rojo"
        android:backgroundTint="@color/transparente" />

    <ImageButton
        android:id="@+id/botonAzul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/botonVerde"
        app:layout_constraintTop_toBottomOf="@+id/botonVerde"
        app:srcCompat="@drawable/boton_azul"
        android:backgroundTint="@color/transparente" />

    <TextView
        android:id="@+id/textRondas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="70dp"
        android:text="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

