<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textRonda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="RONDA"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/guideline4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="45dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="365dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="45dp" />

    <TextView
        android:id="@+id/textNRondas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="12dp"
        android:text="000"
        app:layout_constraintEnd_toEndOf="@+id/textRonda"
        app:layout_constraintTop_toBottomOf="@+id/textRonda" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="textNRondas" />

    <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/textNRondas" />

    <Button
        android:id="@+id/botonSuperior"
        app:backgroundTint="@color/red"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/triangulo"
        android:rotation="180"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <Button
        android:id="@+id/botonIzquierda"
        app:backgroundTint="@color/blue"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/triangulo"
        android:rotation="90"
        app:layout_constraintBottom_toTopOf="@+id/botonInferior"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/botonSuperior" />

    <Button
        android:id="@+id/botonDerecha"
        app:backgroundTint="@color/green"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="108dp"
        android:background="@drawable/triangulo"
        android:rotation="270"
        app:layout_constraintBottom_toTopOf="@+id/botonInferior"
        app:layout_constraintStart_toEndOf="@+id/botonIzquierda"
        app:layout_constraintTop_toBottomOf="@+id/botonSuperior" />

    <Button
        android:id="@+id/botonInferior"
        app:backgroundTint="@color/purple"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="104dp"
        android:background="@drawable/triangulo"
        app:layout_constraintEnd_toEndOf="@+id/botonSuperior"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/botonSuperior"
        app:layout_constraintTop_toBottomOf="@+id/botonSuperior" />

    <Button
        android:id="@+id/botonJugar"
        android:layout_width="105dp"
        android:layout_height="50dp"
        android:layout_marginTop="56dp"
        android:text="JUGAR"
        android:textSize="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonInferior" />

</androidx.constraintlayout.widget.ConstraintLayout>